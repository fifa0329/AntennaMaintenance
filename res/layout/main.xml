<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:gravity="right"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:background="@drawable/main_bg"
    >
 <TableLayout android:id="@+id/TableLayout01"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:stretchColumns="0,1"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        >
        <TableRow 
            android:id="@+id/TableRow01" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/TextView_StationShow" 
                android:layout_width="wrap_content"
                android:layout_weight="1" 
                android:layout_height="155dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/station"/>
            <TextView 
                android:id="@+id/TextView_AtenaWrite"
                android:layout_width="wrap_content"
                android:layout_weight="1" 
                android:layout_height="155dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/atenawrite"/>
          
        </TableRow>
         <TableRow 
            android:id="@+id/TableRow02" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            >
            <TextView
                android:id="@+id/TextView_FailureShow"
                android:layout_width="wrap_content"
                android:layout_weight="1" 
                android:layout_height="155dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/failure"/>
            <TextView 
                android:id="@+id/TextView_AtenaShow"
                android:layout_width="wrap_content"
                android:layout_weight="1" 
                android:layout_height="155dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/atenashow"/>
        </TableRow>
        
        <TableRow 
            android:id="@+id/TableRow03" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            >
            <TextView
                android:id="@+id/TextView_More"
                android:layout_width="wrap_content"
                android:layout_weight="1" 
                android:layout_height="155dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/more"/>
           <TextView 
                android:id="@+id/TextView_no"
                android:layout_width="wrap_content"
                android:layout_weight="1" 
                android:layout_height="155dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="5dp"
                />
          
        </TableRow>
         

    </TableLayout>


</LinearLayout>
