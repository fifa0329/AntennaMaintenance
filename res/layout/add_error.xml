<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	android:id="@+id/widget50"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#FFFFFF">

<TextView
    android:id="@+id/errordetail"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:background="#04478B"
    android:textColor="#FFFFFF"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:ems="10"
    android:gravity="center"
    android:text="故障详情"
    android:textSize="40sp" />

<RelativeLayout
    android:id="@+id/widget52"
    android:layout_width="fill_parent"
    android:layout_height="280dp"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/errordetail" >

    <EditText
        android:id="@+id/description"
        android:layout_width="195dp"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/widget59"
        android:hint="请输入故障描述"
        android:textSize="18sp" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/widget59"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/widget55"
        android:textColor="#000000"
        android:text="故障描述：" />

    <TextView
        android:id="@+id/widget55"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:background="#DFDFDF"
        android:textColor="#000000"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="故障处理前照片"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/empty_up"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/description"
        android:layout_marginRight="15dp"
        android:scaleType="fitStart"
        android:src="@drawable/empty" />

    <ImageView
        android:id="@+id/edit_up"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/description"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/empty_up"
        android:src="@drawable/edit" />

    <ImageView
        android:id="@+id/takepictureup"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/edit_up"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/edit_up"
        android:src="@drawable/camera" />

    <ImageView
        android:id="@+id/error_photo_before"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/widget59"
        android:src="@drawable/beforepicture" />

</RelativeLayout>

<RelativeLayout
    android:id="@+id/widget51"
    android:layout_width="fill_parent"
    android:layout_height="280dp"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/widget52" >


    <TextView
        android:id="@+id/widget53"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#DFDFDF"
        android:textColor="#000000"
        android:text="故障处理后照片"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/widget58"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/widget53"
        android:textColor="#000000"
        android:text="故障描述：" />

    <ImageView
        android:id="@+id/error_photo_after"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/widget58" 
        android:src="@drawable/beforepicture"/>

    <EditText
        android:id="@+id/completion"
        android:layout_width="195dp"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/widget58"
        android:ems="10"
        android:hint="请输入故障解决情况"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/empty_down"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/completion"
        android:layout_marginRight="15dp"
        android:src="@drawable/empty" />

    <ImageView
        android:id="@+id/edit_down"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/completion"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/empty_down"
        android:src="@drawable/edit" />

    <ImageView
        android:id="@+id/takepicturedown"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/completion"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/edit_down"
        android:src="@drawable/camera" />
</RelativeLayout>

</RelativeLayout>
